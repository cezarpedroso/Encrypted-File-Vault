<Window x:Class="File_Vault.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="MessageTextBlock" Text="Enter password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
