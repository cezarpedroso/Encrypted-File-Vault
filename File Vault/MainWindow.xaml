<Window x:Class="File_Vault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Vault" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.ColumnSpan="2">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF000F23" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>

            <!-- Vault Selection -->
            <TextBlock x:Name="SelectVaultText" Canvas.Left="40" TextWrapping="Wrap" Text="Select a Vault" Canvas.Top="33" Foreground="White" FontWeight="Bold"/>
            <ComboBox x:Name="SelectVault" Canvas.Left="40" Canvas.Top="54" Width="485" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FF1A1A1A" Foreground="Black"/>

            <!-- Vault Creation Panel -->
            <StackPanel x:Name="VaultCreationPanel" Canvas.Left="40" Canvas.Top="114" Width="485">
                <TextBlock x:Name="EnterNameText" TextWrapping="Wrap" Text="Enter a name:" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="VaultNameTextBox" TextWrapping="Wrap" Width="485"/>
                <TextBlock x:Name="EnterPasswordText" TextWrapping="Wrap" Text="Enter a password:" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
                <PasswordBox x:Name="VaultPasswordBox" Width="485"/>
                <Button x:Name="CreateVaultButton" Content="Create Vault" Height="42" Width="110" Margin="0,10,0,0" Click="CreateVaultButton_Click"/>
            </StackPanel>

            <!-- Action Buttons -->
            <Button x:Name="NewVaultButton" Content="New Vault" Canvas.Left="40" Canvas.Top="274" Height="42" Width="110" Click="NewVaultButton_Click"/>
            <Button x:Name="AddFilesButton" Content="Add Files" Canvas.Left="160" Canvas.Top="274" Height="42" Width="110" Click="AddFilesButton_Click"/>
            <Button x:Name="ExtractFilesButton" Content="Extract Files" Canvas.Left="280" Canvas.Top="274" Height="42" Width="110" Click="ExtractFilesButton_Click"/>
            <Button x:Name="DeleteVaultButton" Content="Delete Vault" Canvas.Left="400" Canvas.Top="274" Height="42" Width="110" Click="DeleteVaultButton_Click"/>

            <!-- Status -->
            <TextBlock x:Name="StatusTextBlock" Canvas.Left="40" TextWrapping="Wrap" Text="Status" Canvas.Top="332" Width="485" Foreground="#FF19C814"/>
            <Image Height="179" Canvas.Left="580" Canvas.Top="-40" Width="190" Source="dd2.png"/>
        </Canvas>
    </Grid>
</Window>
